---
var {src, headerText, href } = Astro.props;
---
<div class="discordContainerWrapper">
    <a href={href}>
        <div class="discordContainer">
            <div class="headerWrapper">
                <h2 class="discordHeader">{headerText}</h2>
            </div>

            <div class="imageContainer">
                <img class="hexImage" src={src}/>
            </div>
        </div>
    </a>
</div>

<style>
    .discordContainerWrapper{
        width: 100%;
        justify-content: center;
        margin: 10px 15px;
    }

    .discordContainer {
        width: 100%;
        max-width: 450px;
        max-height: 300px;
        flex-direction: column;
        background-color: #ffffff27;
        color: white;
        border-radius: 20px;
        align-items: center;
        justify-content: center;

        overflow: hidden;
        transition: background-color 0.2s ease;
    }

    .discordContainer a{
        width: 100%;
        max-height: 70%;
    }

    .hexImage { transform-origin: center; }

    .imageContainer img,
    .hexImage {
        width: 100%;
        object-fit: cover;
        display: block;
        transition: transform 0.2s ease;
        transform: scale(1);
    }

    /* hover: rozjaśnij tło + powiększ img */
    .discordContainerWrapper:hover .discordContainer {
        background-color: #ffffff40;
    }

    .discordContainerWrapper:hover .imageContainer img,
    .discordContainerWrapper:hover .hexImage {
        transform: scale(1.2);
    }


    .headerWrapper{
        flex-direction: row;
        justify-content: center;
        align-items: center;
        color: white;
        font-family: "minecraft";
    }
    .headerWrapper h2{
        margin: 5px 0;
    }
    
    .subHeaderWrapper{
        flex-direction: row;
        justify-content: center;
        align-items: center;
        margin: 0px 10px 15px 0px;
        color: white;
    }
    .discordHeader {
        text-align: center;
    }
    .discordSubHeader {
        margin: 0 0 0 15px;
        text-align: center;
    }
    .discordText {
        color: white;
        text-align: center;
    }
    .discordUrl{
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 20px;
        margin-bottom: 10px;
        text-decoration: none;
        color: 	#7289da;
        font-weight: 600;
        font-size: 32px;
    }
    .discordUrl:hover{
        color: 	#b8c4f0;
    }

    .discordIcon {
        width: 50px;
        height: 50px;
        margin-right: 10px;
        overflow: hidden;
    }

    .discordIcon svg{
        width: 50px !important;
        height: 50px !important; 
    }

    .imageContainer{
        width: 100%;
        height: 100%;
    }

    img{
        width: 100%;
            object-fit: cover;
    }

    @media (max-width: 980px){
        .discordContainerWrapper{
            margin: 10px 0;
        }
        .discordContainer{
            max-width: 100%;
        }
        .imageContainer{
            width: 100%;
            max-height: 250px;
        }
        img{
            object-fit: cover;
        }
    }

</style>