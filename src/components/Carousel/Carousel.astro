---
import "../../styles/global.css"
import "./Carousel.styles.css"

const {carouselId, startIndex} = Astro.props
---
<div class="carousel-outer-wrapper" data-carousel-id=`${carouselId}` data-start-index=`${startIndex}`>
    <button class="nav left" aria-label="Prev">&#9664;</button>
    <button class="nav right" aria-label="Next">&#9654;</button>
    <div class="gradient left-gradient"></div>
    <div class="gradient right-gradient"></div>
    <div class="carousel-wrapper">    
        <div class="carousel" id="carousel" >
            <slot />
        </div>
    </div>
    <div class="carouselIndicatorsWrapper">
        <div class="carousel-indicators"></div>
    </div>

</div>
  
<style>

.nav {
    width: 18%;
    height: 100%;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    border: none;
    padding: 0.5rem;
    cursor: pointer;
    z-index: 3;
    opacity: 0.8;
    color: rgba(36, 36, 36, 0.75);
    font-size: 40px;
    background-color: transparent;
}

.nav::before {
    content: "";
    position: absolute;
    top: 0; left: 0; bottom: 0; right: 0;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
}

.nav:hover{
    color: rgba(2, 2, 2, 0.75);
}

.nav.left::before {
    background: linear-gradient(87deg, rgba(255, 255, 255, 1), transparent);
}

.nav.right::before {
    background: linear-gradient(273deg, rgba(255, 255, 255, 1), transparent);
}

.nav:hover::before {
    opacity: 1;
}

.gradient {
    position: absolute;
    top: 0;
    width: 18%;
    height: 100%;
    z-index: 2;
    pointer-events: none;
}

.left-gradient {
    left: 0;
    background: linear-gradient(87deg, var(--background-color) 0%, transparent 100%);
}

.right-gradient {
    right: 0;
    background: linear-gradient(273deg, var(--background-color)  0%, transparent 100%);
}

.carousel-wrapper {
    position: relative;
    overflow: hidden;
    width: 100%;
}

.carousel {
    display: flex;
    overflow: hidden;
    scroll-behavior: smooth;
    touch-action: pan-y;
    width: 100%;
}

::slotted(div) {
    min-width: 100%;
    flex-shrink: 0;
}

.left {
    left: 0;
}

.right {
    right: 0;
}

.carousel-indicators {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 1rem;
    position: relative;
    z-index: 2;
}

.carouselIndicatorsWrapper{
    width: 100%;
    height: 30px;
    position: absolute;
    bottom: 5px;
    justify-content: center;
}

</style>


<script>
    function initCarouselLogic(id: string) {

    document.addEventListener("DOMContentLoaded", ()=>{
        const carouselWrapper = document.querySelector(`.carousel-outer-wrapper[data-carousel-id="${id}"]`);
        const carousel = carouselWrapper?.getElementsByClassName('carousel')[0];
        const indicatorsContainer = carouselWrapper?.getElementsByClassName('carousel-indicators')[0];
        const leftBtn = carouselWrapper?.querySelector('.left');
        const rightBtn = carouselWrapper?.querySelector('.right');

        const defaultIndex = Number(carouselWrapper?.dataset?.startIndex) || 0;

        if(carousel && leftBtn && rightBtn && indicatorsContainer){
            var slides = Array.from(carousel.children);
            let totalSlides = slides.length;
            var currentIndex = defaultIndex;

            const dots: Element[] = [];
            for (let i = 0; i < totalSlides; i++) {
                const dot = document.createElement('div');
                dot.classList.add('dot');
                if (i === defaultIndex) dot.classList.add('active');
                indicatorsContainer.appendChild(dot);
                dots.push(dot);

                dot.addEventListener('click', () => {
                    currentIndex = i;
                    updateCarousel();
                });
            }

            function updateIndicators() {
                dots.forEach((d, i) => d.classList.toggle('active', i === currentIndex));
            }

            function updateCarousel() {
                position = slideWidth * (currentIndex + 1); // +1 for the cloned first slide
                console.log("SLIDE: ", slideWidth);
                carousel.scrollTo({ left: position, behavior: 'smooth' });
                updateIndicators();
            }

            const getSlideWidth = () => slides[1].offsetWidth;

            const prepend = slides[slides.length - 1].cloneNode(true);
            const append = slides[0].cloneNode(true);
            carousel.prepend(prepend);
            carousel.append(append);
            slides = Array.from(carousel.children);
        
            const slideWidth = getSlideWidth();

            let position = slideWidth;
            carousel.scrollLeft = position;
        
            const move = (dir: string) => {
                if (dir === 'left') {
                    currentIndex--;
                } else {
                    currentIndex++;
                }

                if (currentIndex < 0) currentIndex = totalSlides - 1;
                if (currentIndex >= totalSlides) currentIndex = 0;

                updateCarousel();
            };
        
            leftBtn.addEventListener('click', () => move('left'));
            rightBtn.addEventListener('click', () => move('right'));
        
            // Touch support
            let startX = 0;
            carousel.addEventListener('touchstart', (e) => {
                startX = e.touches[0].clientX;
            });
        
            carousel.addEventListener('touchend', (e) => {
                const endX = e.changedTouches[0].clientX;
                const diff = startX - endX;
                if (Math.abs(diff) > 50) {
                    move(diff > 0 ? 'right' : 'left');
                }
            });

            updateCarousel();
        }
    
        
    });
}
window.initCarouselLogic = initCarouselLogic;
</script>

<script type="module">
    function reportSize() {
        const carouselWrapper = document.querySelector(`.carousel-outer-wrapper[data-carousel-id="${id}"]`);
        const carousel = carouselWrapper?.getElementsByClassName('carousel')[0];
        const indicatorsContainer = carouselWrapper?.getElementsByClassName('carousel-indicators')[0];
        const children = Array.from(indicatorsContainer.children); 

        const activeIndex = children.findIndex(child => child.classList.contains('active'));

        if(carousel && activeIndex != -1){
            var slides = Array.from(carousel.children);
            const slideWidth = slides[1].offsetWidth;
            carousel.scrollTo({ left: slideWidth * (activeIndex + 1) , behavior: 'smooth' });
            console.log("TEST", slideWidth, activeIndex)
        }
    }
  
    window.addEventListener('resize', reportSize);
</script>
