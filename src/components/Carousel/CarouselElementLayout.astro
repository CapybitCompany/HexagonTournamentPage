---
import "../../styles/global.css"

const {imgSrc, styles} = Astro.props;
---


<div class="carouselElementContainer" style=`${styles}`>
    <div class="carouselImageWrapper">
        <img class="carouselImage" src=`${imgSrc}` alt="" loading="lazy" decoding="async" />
    </div>
    <div class="carouselContentWrapper">
        <slot/>
    </div>
</div>

<style>
    .carouselElementContainer{
        width: 100%;
        height: 100%;
        flex-direction: column;
        background-color: #f5f5f5;
        overflow: hidden;
    }
    .carouselImageWrapper{
        width: 100%;
        height: 40%;
        overflow: hidden;
    }
    .carouselImage{
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }
    .carouselContentWrapper{
        flex: 1;
        padding: 10px;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        text-align: center;
    }

</style>