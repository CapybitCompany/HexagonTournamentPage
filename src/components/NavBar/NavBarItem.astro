---
import '../../styles/global.css';
const {dataId} = Astro.props;
---

<div data-id=`${dataId}` class={`navBarItemContainer`}>
    <slot/>
</div>

<style>
.navBarItemContainer{
    height: 80%;
    min-width: fit-content;
    color: var(--primary-text-color);
    padding: 1% 0%;
    font-weight: 500;
    flex-wrap: nowrap;
    box-sizing: border-box;

    a{
        text-decoration: none;
        color: var(--primary-text-color);
        font-size: 1.8rem;
    }
}

</style>