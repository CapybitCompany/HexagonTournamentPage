    }
    .navBarWrapper{
        position: fixed;
        top: 0;
        width: 100%;
        height: 60px;
        justify-content: center;
        gap:  2%;
    }
    .navBarContainer{
        position: relative;
        height: 100%;
        background-color: var(--background-color);
        gap: 5%;
    }

    @media (max-width: 950px) {
        .navBarWrapper{
            justify-content: flex-start;
        }
    }



</style>