---
// Komponent, który tworzy tabelę na podstawie przekazanych nagłówków i wierszy
const { headers, rows } = Astro.props;
---

<table class="table">
  <thead>
    <tr>
      {headers.map((header) => (
        <th><div class="tableHeader">{header}</div></th>
      ))}
    </tr>
  </thead>
  <tbody>
    {rows.map((row) => (
        <tr>
          {row.map((cell) => (
            <td>
                <div class="tableCell">
                {cell.icon && <img src={cell.icon} alt="" class="cellIcon" />}
                <div class="cellText">{cell.text}</div>

                </div>
            </td>
            ))}
        </tr>
      ))}
  </tbody>
</table>

<style>
    .table {
        width: 100%;
        border-collapse: collapse;
        margin: 40px 0 20px 0;
        table-layout: fixed;
        font-family: Arial, sans-serif;
        text-align: left;
    }

    .table th, .table td {
        border: 0px solid #ddd;
        border-spacing: 0;
        padding: 0;
    }

    .table td{
        height: 300px;
    }

    .tableCell{
        width: 100%;
        height: 100%;
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 1rem;
        box-sizing: border-box;
    }

    .cellText {
        margin-bottom: 10px;
        margin-top: 10px;
        font-size: 20px;
        max-width: 300px;
    }

    .cellIcon {
        width: 128px;
        height: 128px;
        opacity: 0.6;
    }

    .tableHeader{
        width: 100%;
        height: 100%;
        font-weight: bold;
        align-items: center;
        justify-content: center;
        text-align: center;
        font-size: 26px;
    }

    .svg-wrapper {
        position: relative;
        width: 40px;
        height: 40px;
    }

    .icon {
        position: absolute;
        width: 100%;
        height: 100%;
    }

    .color-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: red;
        mix-blend-mode: multiply;
        pointer-events: none;
    }

</style>