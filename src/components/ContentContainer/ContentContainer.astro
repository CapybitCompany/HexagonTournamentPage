---
import "../../styles/global.css";
const {style} = Astro.props;
---

<main class="contentContainer" style=`${style}`>
    <slot/>
</main>

<style>
    main{
        display: flex;
    }

    .contentContainer{
        width: 100%;
        height: 100%;
        background-color: var(--primary-color);
        flex-direction: column;
    }

</style>